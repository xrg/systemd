# do not edit this file, it will be overwritten on update

# permissions for SCSI CD devices
SUBSYSTEM=="scsi", KERNEL=="sg*", MODE="0660", GROUP="cdwriter"
SUBSYSTEM=="scsi", KERNEL=="s[grt][0-9]*", ATTR{type}=="5", MODE="0660", GROUP="cdrom"

# tape devices (inspired from Gentoo rules)
KERNEL=="st[0-9]*|nst[0-9]*|ht[0-9]*|nht[0-9]*|pt[0-9]*|npt[0-9]*", GROUP="tape"
SUBSYSTEMS=="scsi", KERNEL=="sg[0-9]*", ATTRS{type}=="[18]", GROUP="tape"

# IDE devices
SUBSYSTEMS=="ide", KERNEL=="hd[a-z]", ATTR{removable}=="1", ATTR{media}=="cdrom", GROUP="cdrom"
SUBSYSTEMS=="ide", KERNEL=="hd[a-z]", ATTR{removable}=="1", ATTR{media}=="floppy", GROUP="floppy"

# workaround for devices which do not report media changes (adapted from Debian)
SUBSYSTEMS=="ide", KERNEL=="hd[a-z]", ATTR{removable}=="1", \
        ENV{ID_MODEL}=="IOMEGA_ZIP*", OPTIONS+="all_partitions", GROUP="floppy"

# video (supplement of 40-video.rules, currently overidden by pam_console)
KERNEL=="card[0-9]*",	GROUP="video"
KERNEL=="3dfx*",	GROUP="video"

# sound devices (sound=alsa, snd=oss)
SUBSYSTEM=="sound|snd",	GROUP="audio"

# tty devices
KERNEL=="dcbri*", GROUP="tty"
# pilot/palm devices
KERNEL=="pilot", GROUP="uucp"

# ISDN devices
KERNEL=="ippp0", GROUP="tty"
# CAPI devices
KERNEL=="capi",		NAME="capi20", SYMLINK+="isdn/capi20"
KERNEL=="capi*",	NAME="capi/%n"
